<div class="share-wrap clearfix text-center">
    <div class="share-text h4">{{t "Share this article on:"}}</div>
    <ul class="share-links">
        <!-- facebook -->
        <li>
            <a class="facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;" title="Share on Facebook">{{> icons/facebook}} {{t "Facebook"}}</a>
        </li>
        <!-- twitter -->
        <li>
            <a class="twitter" href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}" onclick="window.open(this.href, 'twitter-share', 'width=580,height=296');return false;" title="Share on Twitter">{{> icons/twitter}} {{t "Twitter"}}</a>
        </li>
        <!-- google plus -->
        <li>
            <a class="whatsapp" href="whatsapp://send?text={{url absolute="true"}}" data-action="share/whatsapp/share" onclick="window.open(this.href, 'whatsapp-share', 'width=580,height=296');return false;" title="Share on Whatsapp">{{> icons/whatsapp}} {{t "Whatsapp"}}</a>
        </li>
        <!-- linkedin -->
        <li>
            <a class="linkedin" href="http://www.linkedin.com/shareArticle?mini=true&url={{url absolute="true"}}&title={{encode title}}" onclick="window.open(this.href, 'linkedin-share', 'width=580,height=296');return false;" title="Share on Linkedin">{{> icons/linkedin}} {{t "Linkedin"}}</a>
        </li>
        <!-- pinterest -->
        <li>
            <a class="pinterest" href="http://pinterest.com/pin/create/button/?url={{url absolute="true"}}&description={{encode title}}" onclick="window.open(this.href, 'linkedin-share', 'width=580,height=296');return false;" title="Share on Pinterest">{{> icons/pinterest}} {{t "Pinterest"}}</a>
        </li>
    </ul>
</div>